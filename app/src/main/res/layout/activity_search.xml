<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#EEEEEE">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">
        <ImageButton
            android:id="@+id/hotel_search_exitButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/exitbutton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="top"
            app:layout_constraintLeft_toRightOf="@+id/hotel_search_exitButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="호텔"
            android:textColor="#0000AA"
            android:textSize="20dp"/>
    </android.support.constraint.ConstraintLayout>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="#ffffff">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/hotel_search_destination_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        card_view:layout_constraintTop_toTopOf="parent"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        card_view:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/destination_image"/>
                    <TextView
                        android:id="@+id/hotel_search_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        card_view:layout_constraintTop_toTopOf="parent"
                        card_view:layout_constraintBottom_toTopOf="@id/hotel_search_destination_name"
                        card_view:layout_constraintLeft_toRightOf="@id/hotel_search_destination_image"
                        android:text="목적지 입력"
                        android:textColor="#000000"
                        android:textSize="12dp"/>
                    <EditText
                        android:id="@+id/hotel_search_destination_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        card_view:layout_constraintTop_toBottomOf="@id/hotel_search_destination"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        card_view:layout_constraintLeft_toRightOf="@id/hotel_search_destination_image"
                        android:text="Hotel Name Example1"
                        android:textColor="#000000"
                        android:textSize="17dp"/>
                </android.support.constraint.ConstraintLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="#ffffff">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/hotel_search_calendar_start_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ff0000"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/hotel_search_calendar_start_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/calendar_image"/>
                <TextView
                    android:id="@+id/hotel_search_start_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toTopOf="@id/hotel_search_calendar_start_textSet"
                    card_view:layout_constraintLeft_toRightOf="@+id/hotel_search_calendar_start_image"
                    android:text="출발 날짜 선택"
                    android:textColor="#000000"
                    android:textSize="12dp"/>
                <LinearLayout
                    android:id="@+id/hotel_search_calendar_start_textSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:layout_constraintLeft_toRightOf="@+id/hotel_search_calendar_start_image"
                    card_view:layout_constraintTop_toBottomOf="@+id/hotel_search_start_calendar"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/hotel_search_calendar_start_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        tools:text="N"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text=" 년"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/hotel_search_calendar_start_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        tools:text="N"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text=" 월"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/hotel_search_calendar_start_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        tools:text="M"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text=" 일"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="#ffffff">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/hotel_search_calendar_arrive_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ff0000"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/hotel_search_calendar_arrive_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/calendar_image"/>
                <TextView
                    android:id="@+id/hotel_search_arrive_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toTopOf="@id/hotel_search_calendar_arrive_textSet"
                    card_view:layout_constraintLeft_toRightOf="@+id/hotel_search_calendar_arrive_image"
                    android:text="도착 날짜 선택"
                    android:textColor="#000000"
                    android:textSize="12dp"/>
                <LinearLayout
                    android:id="@+id/hotel_search_calendar_arrive_textSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:layout_constraintLeft_toRightOf="@+id/hotel_search_calendar_arrive_image"
                    card_view:layout_constraintTop_toBottomOf="@+id/hotel_search_arrive_calendar"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/hotel_search_calendar_arrive_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        tools:text="N"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text=" 년"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/hotel_search_calendar_arrive_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        tools:text="N"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text=" 월"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/hotel_search_calendar_arrive_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        tools:text="M"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text=" 일"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="#ffffff">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/hotel_search_person_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ff0000"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/hotel_search_person_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/person_image"/>
                <TextView
                    android:id="@+id/hotel_search_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toTopOf="@id/hotel_search_member_num"
                    card_view:layout_constraintLeft_toRightOf="@+id/hotel_search_person_image"
                    android:text="인원 수"
                    android:textColor="#000000"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/hotel_search_member_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    card_view:layout_constraintTop_toBottomOf="@id/hotel_search_member"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintLeft_toRightOf="@+id/hotel_search_person_image"
                    tools:text="N"
                    android:textColor="#000000"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:layout_constraintTop_toBottomOf="@id/hotel_search_member"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintLeft_toRightOf="@id/hotel_search_member_num"
                    android:text="명"
                    android:textColor="#000000"
                    android:textSize="18dp"/>
            </android.support.constraint.ConstraintLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="15dp"
        android:paddingVertical="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="0dp">
        <Button
            android:id="@+id/hotel_search_search_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="검색"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#0000AA"/>
    </android.support.v7.widget.CardView>
</LinearLayout>