<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginHorizontal="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvRoomOption"
    android:orientation="horizontal" android:background="#ffffff">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvOptionNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="옵션1"
            android:textSize="14dp"
            android:textColor="#0000AA"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무료 취소"
            android:textSize="9dp"
            android:textColor="#EEEEEE"/>
        <TextView
            android:id="@+id/tvEDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5월 8일(수) 전까지"
            android:textSize="7dp"
            android:textColor="#0000AA"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="무료 무선 인터넷"
            android:textSize="10dp"
            android:textColor="#0000AA"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="무료 주차"
            android:textSize="10dp"
            android:textColor="#0000AA"/>
        <TextView
            android:id="@+id/tvBreakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2인 아침 식사"
            android:textSize="10dp"
            android:textColor="#0000AA"/>
        <TextView
            android:id="@+id/tvRoomPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="440포인트 적립"
            android:textSize="10dp"
            android:textColor="#0000AA"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvRoomPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-80%"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:layout_gravity="end"/>
        <TextView
            android:id="@+id/tvRoomPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="￦109,091"
            android:textSize="15dp"
            android:textColor="#0000AA"/>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="65dp"
            android:layout_height="40dp"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_marginTop="5dp"
            android:layout_gravity="end"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardBackgroundColor="#0000AA">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="선택"
                android:textColor="#ffffff"
                android:textSize="18dp"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>