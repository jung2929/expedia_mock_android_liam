<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">
        <ImageButton
            android:id="@+id/person_adult_minus_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/minus_button"/>
        <TextView
            android:id="@+id/person_adult"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toLeftOf="@id/person_adult_n"
            android:text="어른"
            android:textSize="18dp"
            android:textColor="#0000AA"/>
        <TextView
            android:id="@+id/person_adult_n"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@id/person_adult_minus_btn"
            app:layout_constraintRight_toLeftOf="@id/person_adult_plus_btn"
            android:text="1"
            android:textSize="18dp"
            android:textColor="#0000AA"/>
        <TextView
            android:id="@+id/person_adult_myung"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@id/person_adult_n"
            android:text="명"
            android:textSize="18dp"
            android:textColor="#0000AA"/>
        <ImageButton
            android:id="@+id/person_adult_plus_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/plus_button"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">
        <ImageButton
            android:id="@+id/person_child_minus_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/minus_button"/>
        <TextView
            android:id="@+id/person_child"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toLeftOf="@id/person_child_n"
            android:text="아동"
            android:textSize="18dp"
            android:textColor="#0000AA"/>
        <TextView
            android:id="@+id/person_child_n"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@id/person_child_minus_btn"
            app:layout_constraintRight_toLeftOf="@id/person_child_plus_btn"
            android:text="0"
            android:textSize="18dp"
            android:textColor="#0000AA"/>
        <TextView
            android:id="@+id/person_child_myung"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@id/person_child_n"
            android:text="명"
            android:textSize="18dp"
            android:textColor="#0000AA"/>
        <ImageButton
            android:id="@+id/person_child_plus_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/plus_button"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/person_child_age_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="각 아동의 나이 선택"
        android:textColor="#0000AA"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:stretchColumns="*">
        <TableRow
            android:layout_marginTop="15dp">
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_child1"
                android:spinnerMode="dropdown"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:textColor="#000000"
                android:visibility="gone"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_child2"
                android:spinnerMode="dropdown"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:textColor="#000000"
                android:visibility="gone"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp">
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_child3"
                android:spinnerMode="dropdown"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:visibility="gone"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_child4"
                android:spinnerMode="dropdown"
                android:background="#ffffff"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:visibility="gone"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp">
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_child5"
                android:spinnerMode="dropdown"
                android:background="#ffffff"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:visibility="gone"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_child6"
                android:spinnerMode="dropdown"
                android:background="#ffffff"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:visibility="gone"
                />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/dialog_complete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textColor="#0000AA"
        android:textSize="15dp"
        android:text="완료"
        android:background="#ffffff" />

</LinearLayout>