<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    android:id="@+id/hotel_sale_cardView"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/hotel_sale_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hotel_image"/>
            <TextView
                android:id="@+id/hotel_sale_percent"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffffff"
                tools:text="-75%"
                android:textSize="10dp"
                android:layout_gravity="right|bottom"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"/>
        </FrameLayout>
        <TextView
            android:id="@+id/hotel_sale_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="서귀포 칼 호텔"
            android:textSize="20dp"
            android:textColor="#0000AA"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/hotel_sale_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="서귀포, 한국"
            android:textSize="13dp"
            android:textColor="#9999FF"
            android:layout_marginStart="15dp" />
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/hotel_sale_date"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5월 19일 (일) ~ 5월 20일 (월)"
                android:textColor="#0000AA"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/hotel_sale_price"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1박 요금 \68,182"
                android:textColor="#0000AA"
                android:textSize="15dp"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>