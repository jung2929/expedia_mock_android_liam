<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/exitbutton"/>
        <TextView
            android:id="@+id/hotel_info_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toRightOf="@id/backButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/hotel_info_star"
            android:textSize="15dp"
            tools:text="호프 랜드 호텔 수쿰빗 46/1"/>
        <TextView
            android:id="@+id/hotel_info_star"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toRightOf="@+id/backButton"
            app:layout_constraintTop_toBottomOf="@id/hotel_info_name"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="★★★★"
            android:textSize="15dp"/>
        <ImageView
            android:id="@+id/hotel_info_share"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/exitbutton"/>
    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v4.view.ViewPager
                    android:id="@+id/hotel_info_image_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                </android.support.v4.view.ViewPager>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#BBFFFF">
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:layout_marginStart="20dp"
                        android:background="#007777"
                        android:text="-76%"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:paddingVertical="7dp"
                        android:layout_marginEnd="10dp"
                        tools:text="5개 남았어요!"
                        android:textColor="#007777"/>
                </android.support.constraint.ConstraintLayout>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <TextView
                        android:id="@+id/hotel_info_prime_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        tools:text="\\150,806"
                        android:textColor="#000000"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/hotel_info_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/hotel_info_prime_price"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:gravity="center"
                        android:layout_marginStart="20dp"
                        tools:text="\\36,847/1박"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/hotel_info_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/hotel_info_price"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        tools:text="290포인트 적립"
                        android:textColor="#000000"
                        android:textSize="10dp"/>
                    <TextView
                        android:id="@+id/hotel_info_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        tools:text="4월 23일 ~ 4월 25일"
                        android:textColor="#0000FF"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/hotel_info_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/hotel_info_date"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        tools:text="2명"
                        android:textColor="#000000"
                        android:textSize="15dp"/>
                </android.support.constraint.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</LinearLayout>