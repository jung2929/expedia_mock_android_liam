<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v4.view.ViewPager
                    android:id="@+id/hotel_info_image_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                </android.support.v4.view.ViewPager>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#BBFFFF">
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:layout_marginStart="20dp"
                        android:background="#007777"
                        android:text="-76%"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:paddingVertical="7dp"
                        android:layout_marginEnd="10dp"
                        android:text="5개 남았어요!"
                        android:textColor="#007777"/>
                </android.support.constraint.ConstraintLayout>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <TextView
                        android:id="@+id/hotel_info_prime_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="\\150,806"
                        android:textColor="#000000"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/hotel_info_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/hotel_info_prime_price"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:gravity="center"
                        android:layout_marginStart="20dp"
                        android:text="\\36,847/1박"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/hotel_info_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/hotel_info_price"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="290포인트 적립"
                        android:textColor="#000000"
                        android:textSize="10dp"/>
                    <TextView
                        android:id="@+id/hotel_info_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="4월 23일 ~ 4월 25일"
                        android:textColor="#0000FF"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/hotel_info_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/hotel_info_date"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:text="2명"
                        android:textColor="#000000"
                        android:textSize="15dp"/>
                </android.support.constraint.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/hotel_info_rate_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00ff0000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginStart="15dp"
                        android:text="4.4/5 - 훌륭함!"
                        android:textSize="13dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="10dp"
                        android:text="98개 이용 후기 보기"
                        android:textSize="13dp"
                        android:textColor="#0000AA"/>
                </FrameLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="2">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="무료 취소"
                        android:textSize="13dp"
                        android:background="#FFFFFF"
                        android:layout_columnWeight="1"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:textColor="#000000"
                        android:gravity="center"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="지금 예약하고 호텔에..."
                        android:textSize="13dp"
                        android:background="#FFFFFF"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:textColor="#000000"
                        android:gravity="center"/>
                </GridLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>
                <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/hotel_info_mark1"
                                android:scaleType="centerCrop"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/hotel_info_mark2"
                                android:scaleType="centerCrop"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/hotel_info_mark3"
                                android:scaleType="centerCrop"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/hotel_info_mark4"
                                android:scaleType="centerCrop"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/hotel_info_mark5"
                                android:scaleType="centerCrop"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/hotel_info_mark6"
                                android:scaleType="centerCrop"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/hotel_info_mark7"
                                android:scaleType="centerCrop"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/hotel_info_mark8"
                                android:scaleType="centerCrop"/>
                        </LinearLayout>
                </HorizontalScrollView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingHorizontal="20dp"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:text="제주(제주시)에 위치한 이 럭셔리 호텔의 경우 인근에 공항이 있으며 삼성혈 유적 동문시장, 민속자연사박물관 등에서 가깝습니다. 또한, 근처에는 제주 난타 극장 및 제주 관덕정도 있습니다."/>
                <fragment
                    android:id="@+id/hotel_info_map"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    class="com.google.android.gms.maps.MapFragment"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="2"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop ="10dp"
                    android:layout_marginBottom="15dp">0
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="지금 결제"
                        android:background="#00C"
                        android:layout_columnWeight="1"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:gravity="center"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="호텔에서 결제"
                        android:gravity="center"
                        android:background="#FFFFFF"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:textColor="#00C"/>
                </GridLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:text="호텔 제공 서비스 / 시설"/>
            </LinearLayout>
    </ScrollView>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="#ffffff">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/backbutton"/>
        <TextView
            android:id="@+id/hotel_info_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="#0000AA"
            android:textSize="15dp"
            android:layout_marginStart="10dp"
            android:gravity="bottom"
            app:layout_constraintBottom_toTopOf="@id/hotel_info_star"
            app:layout_constraintLeft_toRightOf="@id/backButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            android:text="호프 랜드 호텔 수쿰빗 46/1" />
        <TextView
            android:id="@+id/hotel_info_star"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:gravity="top"
            app:layout_constraintLeft_toRightOf="@+id/backButton"
            app:layout_constraintTop_toBottomOf="@id/hotel_info_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="★★★★"
            android:textColor="#0000AA"
            android:textSize="15dp"/>
        <ImageView
            android:id="@+id/hotel_info_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/sharebutton"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>