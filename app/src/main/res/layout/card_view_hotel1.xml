<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/hotel_search_cardView"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <ImageView
                android:id="@+id/hotel_search_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hotel_image2"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/hotel_sale_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    tools:text="인터컨티넨탈 서울 코엑스"
                    android:textSize="17dp"
                    android:layout_gravity="start|bottom"
                    android:gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="강남"
                    android:textColor="#ffffff"
                    android:textSize="13dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/hotel_search_percent"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffffff"
                tools:text="-7%"
                android:textSize="10dp"
                android:layout_gravity="right|bottom"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"/>
        </FrameLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/hotel_search_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="10dp"
                tools:text="4.4/5 - 훌륭함!"
                android:textColor="#000000"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/hotel_search_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                card_view:layout_constraintBottom_toTopOf="@+id/hotel_search_description"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_chainStyle="packed"
                tools:text="\243,000"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/hotel_search_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/hotel_search_price"
                card_view:layout_constraintEnd_toEndOf="parent"
                tools:text="지금 예약하고 호텔에서 결제하세요."
                android:textSize="11dp"
                android:textColor="#000000"
                android:layout_marginEnd="10dp"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>